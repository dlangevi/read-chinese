{
  "name": "read-chinese-node",
  "version": "0.1.0",
  "private": true,
  "description": "the node bundle used while porting to rust",
  "author": "dlangevi",
  "bin": "build/index.js",
  "pkg": {
    "build": [
      "build/*.js",
      "build/*.js.map"
    ],
    "assets": [
      "./node_modules/sqlite3/lib/binding/napi-v6-linux-glibc-x64/node_sqlite3.node",
      "./assets/**/*",
      "./node_modules/nodejieba/build/Release/nodejieba.node",
      "./migrations/*",
      "./node_modules/nodejieba/dict/**/*"
    ]
  },
  "scripts": {
    "lint": "eslint src",
    "typecheck": "vue-tsc --noEmit",
    "buildnode": "tsc -p tsconfig.json --outDir build",
    "packageold": "yarn buildnode && pkg package.json -o ../src-tauri/binaries/app && node scripts/move-binary.js",
    "package": "pkg package.json -o ./build/app",
    "bundle": "yarn buildnode && yarn package",
    "migrate": "knex migrate:latest --knexfile knexfile.ts",
    "migrate:make": "knex migrate:make --knexfile knexfile.ts"
  },
  "dependencies": {
    "@azure/cognitiveservices-imagesearch": "^3.0.1",
    "@azure/ms-rest-azure-js": "^2.1.0",
    "@commonify/lowdb": "^3.0.0",
    "body-parser": "^1.20.1",
    "express": "^4.18.2",
    "knex": "^2.3.0",
    "microsoft-cognitiveservices-speech-sdk": "^1.24.0",
    "node-calibre": "^2.1.1",
    "node-fetch-commonjs": "^3.2.1",
    "nodejieba": "^2.6.0",
    "sqlite3": "^5.1.2",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.14",
    "@types/node": "18.0.0",
    "@types/tmp": "^0.2.3",
    "pkg": "5.2.1",
    "typescript": "^4.6.4"
  },
  "license": "MIT"
}
